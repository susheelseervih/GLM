                    <div className="flex items-center justify-between mb-2">
                      <span className="text-red-700 font-semibold">Auction Eligible (12+ months)</span>
                      <span className="bg-red-100 text-red-700 px-3 py-1 rounded-full text-sm font-bold">
                        {dashboardData.auctionEligible}
                      </span>
                    </div>
                    <p className="text-sm text-gray-600">Ready for auction process</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        {/* Search Section */}
        <div className="mb-8">
          <div className="bg-white rounded-xl shadow-md p-6">
            <h3 className="text-lg font-bold text-gray-800 mb-4 flex items-center">
              <Search className="w-5 h-5 mr-2 text-yellow-600" />
