            {/* Account Info Footer */}
            <div className="mt-8 pt-6 border-t-2 border-gray-200">
              <div className="grid grid-cols-1 md:grid-cols-3 gap-4 text-center">
                <div>
                  <p className="text-sm text-gray-600 mb-1">Member Since</p>
                  <p className="text-lg font-semibold text-gray-900">Nov 2024</p>
                </div>
                <div>
                  <p className="text-sm text-gray-600 mb-1">Total Loans Processed</p>
                  <p className="text-lg font-semibold text-gray-900">156</p>
                </div>
                <div>
                  <p className="text-sm text-gray-600 mb-1">Account Type</p>
                  <p className="text-lg font-semibold text-indigo-600">Premium Owner</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    );
  };

  const NewLoanForm = () => {
    const [loanForm, setLoanForm] = useState({
      customerId: '',
      date: new Date().toISOString().split('T')[0],
      name: '',
      relation: 'S/o',
      relationName: '',
      address: '',
      income: '',
      mobile: '',
      post: '',
      hobli: '',
      taluk: '',
      aadhaar: '',
      loanAmount: '',
      loanPurpose: '',
      numArticles: 1
    });

    const [articles, setArticles] = useState([
      { type: 'Gold', description: '', grossWeight: '', netWeight: '', rate: '', pieces: '', value: '' }
    ]);

    const addArticle = () => {
      setArticles([...articles, { type: 'Gold', description: '', grossWeight: '', netWeight: '', rate: '', pieces: '', value: '' }]);
      setLoanForm({...loanForm, numArticles: articles.length + 1});
    };

    const removeArticle = (index) => {
      const newArticles = articles.filter((_, i) => i !== index);
      setArticles(newArticles);
      setLoanForm({...loanForm, numArticles: newArticles.length});
    };

    const updateArticle = (index, field, value) => {
      const newArticles = [...articles];
      newArticles[index][field] = value;
      
      // Auto-calculate value
      if (field === 'grossWeight' || field === 'rate') {
        const gross = parseFloat(newArticles[index].grossWeight) || 0;
        const rate = parseFloat(newArticles[index].rate) || 0;
        newArticles[index].value = (gross * rate).toFixed(2);
      }
      
      setArticles(newArticles);
    };

    const calculateTotalValue = () => {
      return articles.reduce((sum, article) => sum + (parseFloat(article.value) || 0), 0).toFixed(2);
    };

    const numberToWords = (num) => {
      const ones = ['', 'One', 'Two', 'Three', 'Four', 'Five', 'Six', 'Seven', 'Eight', 'Nine'];
      const tens = ['', '', 'Twenty', 'Thirty', 'Forty', 'Fifty', 'Sixty', 'Seventy', 'Eighty', 'Ninety'];
      const teens = ['Ten', 'Eleven', 'Twelve', 'Thirteen', 'Fourteen', 'Fifteen', 'Sixteen', 'Seventeen', 'Eighteen', 'Nineteen'];
      
      if (num === 0) return 'Zero';
      if (num < 10) return ones[num];
      if (num >= 10 && num < 20) return teens[num - 10];
      if (num >= 20 && num < 100) return tens[Math.floor(num / 10)] + ' ' + ones[num % 10];
      if (num >= 100 && num < 1000) return ones[Math.floor(num / 100)] + ' Hundred ' + numberToWords(num % 100);
      if (num >= 1000 && num < 100000) return numberToWords(Math.floor(num / 1000)) + ' Thousand ' + numberToWords(num % 1000);
      if (num >= 100000) return numberToWords(Math.floor(num / 100000)) + ' Lakh ' + numberToWords(num % 100000);
      return '';
    };

    const handleSubmit = () => {
      alert('Loan created successfully! Status: TAKEN IN');
      setCurrentView('dashboard');
    };

    const downloadLoanReceipt = () => {
      const printContent = `
        <!DOCTYPE html>
        <html>
        <head>
          <meta charset="UTF-8">
          <title>Loan Receipt - ${loanForm.customerId}</title>
          <style>
            * { margin: 0; padding: 0; box-sizing: border-box; }
            @page { size: A4; margin: 15mm; }
            body {
              font-family: 'Courier New', monospace;
              padding: 20px;
              background: #fff;
            }
            .no-print {
              text-align: center;
              margin-bottom: 20px;
              padding: 15px;
              background: #fef3c7;
              border: 2px solid #f59e0b;
              border-radius: 8px;
            }
            .print-btn {
              background: #f59e0b;
              color: white;
              border: none;
              padding: 12px 24px;
              font-size: 16px;
              font-weight: bold;
              cursor: pointer;
              border-radius: 6px;
              margin-right: 10px;
            }
            .close-btn {
              background: #6b7280;
              color: white;
              border: none;
              padding: 12px 24px;
              font-size: 16px;
              cursor: pointer;
              border-radius: 6px;
            }
            @media print { .no-print { display: none !important; } }
            .receipt {
              background: #ffc0cb;
              border: 3px solid #000;
              padding: 20px;
            }
            .header {
              text-align: center;
              border-bottom: 2px solid #000;
              padding-bottom: 15px;
              margin-bottom: 20px;
            }
            .company-name {
              font-size: 20pt;
              font-weight: bold;
              margin: 10px 0;
            }
