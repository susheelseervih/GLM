          </div>
        </div>
      </div>
    );

    return (
      <div className="min-h-screen bg-gray-50 p-4 md:p-8">
        <div className="max-w-6xl mx-auto">
          {/* Header */}
          <div className="bg-white rounded-t-xl shadow-lg p-6 border-b-2 border-yellow-500">
