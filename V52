          {/* Auction Ledger - Styled like the image */}
          <div className="bg-white shadow-lg">
            {/* Header like the image */}
            <div className="border-b-2 border-gray-800 p-4 text-center">
              <p className="text-sm font-mono">Series: I</p>
              <h3 className="text-xl font-bold mt-1">BALAJI BANKERS & JEWELLERS, DEVALAPURA, NAGAMANGALA TALUK</h3>
            </div>

            {/* Table */}
            <div className="overflow-x-auto">
              <table className="w-full border-collapse">
                <thead>
                  <tr className="bg-gray-100 border-b-2 border-gray-800">
                    <th className="border-r border-gray-400 px-2 py-3 text-xs font-bold text-left">
                      <input
                        type="checkbox"
                        onChange={(e) => {
                          if (e.target.checked) {
                            setSelectedLoans(displayedLoans.map(l => l.slNo));
                          } else {
                            setSelectedLoans([]);
                          }
                        }}
                        className="mr-2"
                      />
                      SELECT
                    </th>
                    <th className="border-r border-gray-400 px-3 py-3 text-xs font-bold">SL.<br/>NO.</th>
                    <th className="border-r border-gray-400 px-3 py-3 text-xs font-bold">F.T.<br/>NO.</th>
                    <th className="border-r border-gray-400 px-3 py-3 text-xs font-bold">Date</th>
                    <th className="border-r border-gray-400 px-3 py-3 text-xs font-bold">Amount</th>
                    <th className="px-3 py-3 text-xs font-bold text-left">Name & Address & Articles</th>
                  </tr>
                </thead>
                <tbody className="font-mono text-sm">
                  {displayedLoans.map((loan, index) => (
                    <tr 
                      key={loan.slNo} 
                      className={`border-b border-gray-300 ${selectedLoans.includes(loan.slNo) ? 'bg-yellow-50' : index % 2 === 0 ? 'bg-gray-50' : 'bg-white'} hover:bg-blue-50 transition`}
                    >
                      <td className="border-r border-gray-400 px-2 py-3 text-center">
                        <input
                          type="checkbox"
                          checked={selectedLoans.includes(loan.slNo)}
                          onChange={() => toggleSelectLoan(loan.slNo)}
                          className="w-4 h-4"
                        />
                      </td>
                      <td className="border-r border-gray-400 px-3 py-3 text-center font-bold">
                        {String(loan.slNo).padStart(2, '0')}.
                      </td>
                      <td className="border-r border-gray-400 px-3 py-3 text-center font-bold">
                        {loan.customerId}
                      </td>
                      <td className="border-r border-gray-400 px-3 py-3 text-center whitespace-nowrap">
                        {loan.date.split('-').reverse().join('-')}
                      </td>
                      <td className="border-r border-gray-400 px-3 py-3 text-right font-bold">
                        {loan.amount}/-
                      </td>
                      <td className="px-3 py-3">
                        <div className="text-xs leading-tight">
                          <p className="font-semibold">{loan.name} {loan.relation}, {loan.address},</p>
                          <p className="text-gray-700">{loan.articles}</p>
                        </div>
                      </td>
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>

            {/* Footer info */}
            {auctionLoans.length > 15 && (
              <div className="bg-yellow-50 border-t-2 border-yellow-500 p-4 text-center">
                <p className="text-sm font-semibold text-gray-700">
                  Showing top 15 of {auctionLoans.length} total auction-eligible loans. 
                  <button 
                    onClick={downloadPDF}
                    className="ml-2 text-blue-600 hover:text-blue-800 underline font-bold"
                  >
                    Download PDF with all records
                  </button>
                </p>
              </div>
            )}

            {/* Action buttons at bottom */}
            <div className="p-6 bg-gray-50 border-t-2 border-gray-300 flex justify-between items-center">
              <div className="text-sm text-gray-600">
                <p className="font-bold">Selected: {selectedLoans.length} loan(s)</p>
                <p className="text-xs mt-1">Check boxes to select loans for auction</p>
              </div>
              <button
                onClick={markAsAuctioned}
                disabled={selectedLoans.length === 0}
                className={`px-8 py-3 rounded-lg font-bold text-lg transition ${
                  selectedLoans.length > 0 
                    ? 'bg-red-600 hover:bg-red-700 text-white' 
                    : 'bg-gray-300 text-gray-500 cursor-not-allowed'
                }`}
              >
                Mark Selected as Auctioned
              </button>
            </div>
          </div>
        </div>
      </div>
    );
  };

  const AnalyticsAuthScreen = () => {
    const [captchaInput, setCaptchaInput] = useState('');
    const [otpInput, setOtpInput] = useState('');
    const [captchaCode, setCaptchaCode] = useState('');
    const [generatedOTP, setGeneratedOTP] = useState('');
    const [step, setStep] = useState(1); // 1 = CAPTCHA, 2 = OTP
    const phoneNumber = '9353545650'; // Fixed phone number - won't change

    // Generate random CAPTCHA
    const generateCaptcha = () => {
      const chars = 'ABCDEFGHJKLMNPQRSTUVWXYZ23456789';
      let captcha = '';
      for (let i = 0; i < 6; i++) {
        captcha += chars.charAt(Math.floor(Math.random() * chars.length));
      }
      setCaptchaCode(captcha);
    };

    // Generate and send OTP
    const generateOTP = () => {
      const otp = Math.floor(100000 + Math.random() * 900000).toString();
      setGeneratedOTP(otp);
      console.log('Generated OTP:', otp); // Debug log
      alert(`OTP sent to ${phoneNumber}: ${otp}\n(In production, this would be sent via SMS)`);
    };

    // Initialize CAPTCHA on mount - FIXED
    useEffect(() => {
      generateCaptcha();
    }, []); // Empty dependency array - runs only once

    const handleCaptchaSubmit = (e) => {
      e.preventDefault();
      console.log('CAPTCHA Input:', captchaInput, 'Expected:', captchaCode); // Debug
      if (captchaInput.toUpperCase() === captchaCode) {
        generateOTP();
        setStep(2);
        setCaptchaInput('');
      } else {
        alert('Incorrect CAPTCHA! Please try again.');
        generateCaptcha();
        setCaptchaInput('');
      }
    };

    const handleOTPSubmit = (e) => {
      e.preventDefault();
      console.log('OTP Input:', otpInput, 'Expected:', generatedOTP); // Debug
      if (otpInput === generatedOTP) {
        console.log('OTP Verified! Accessing Analytics...'); // Debug
        setIsAnalyticsAuthenticated(true);
        setCurrentView('analytics');
      } else {
        alert('Incorrect OTP! Please try again.\nYou entered: ' + otpInput + '\nExpected: ' + generatedOTP);
        setOtpInput('');
      }
    };

    return (
      <div className="min-h-screen bg-gradient-to-br from-purple-50 to-indigo-100 flex items-center justify-center p-4">
        <div className="bg-white rounded-2xl shadow-2xl w-full max-w-md p-8">
          <div className="text-center mb-8">
            <div className="w-16 h-16 bg-purple-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <TrendingUp className="w-8 h-8 text-white" />
            </div>
            <h1 className="text-3xl font-bold text-gray-800">Analytics Authentication</h1>
            <p className="text-gray-600 mt-2">Secure access to financial data</p>
          </div>

          {step === 1 ? (
            /* CAPTCHA Step */
            <div className="space-y-6">
              <div>
                <label className="block text-sm font-bold text-gray-800 mb-3">Step 1: Verify CAPTCHA</label>
                
                {/* CAPTCHA Display */}
                <div className="bg-gradient-to-r from-gray-200 to-gray-300 rounded-lg p-6 mb-4 relative overflow-hidden">
                  <div className="absolute inset-0 opacity-10">
                    <div className="absolute top-0 left-0 w-full h-1 bg-purple-500"></div>
                    <div className="absolute bottom-0 right-0 w-full h-1 bg-indigo-500"></div>
                    <div className="absolute top-0 left-0 w-1 h-full bg-pink-500"></div>
                    <div className="absolute top-0 right-0 w-1 h-full bg-blue-500"></div>
                  </div>
                  <p className="text-4xl font-bold text-center tracking-widest text-gray-800 select-none" style={{
                    fontFamily: 'monospace',
                    textShadow: '2px 2px 4px rgba(0,0,0,0.3)',
                    letterSpacing: '8px',
                    transform: 'skew(-5deg)'
                  }}>
                    {captchaCode}
                  </p>
                </div>

                <button
                  onClick={generateCaptcha}
                  className="w-full mb-4 px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition font-semibold text-sm"
                >
                  üîÑ Refresh CAPTCHA
                </button>

                <input
                  type="text"
                  value={captchaInput}
                  onChange={(e) => setCaptchaInput(e.target.value)}
                  className="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent text-center text-lg font-semibold uppercase tracking-widest"
                  placeholder="Enter CAPTCHA"
                  maxLength="6"
                />
              </div>

              <button
                onClick={handleCaptchaSubmit}
                disabled={captchaInput.length !== 6}
                className={`w-full py-3 rounded-lg font-bold text-lg transition ${
                  captchaInput.length === 6
                    ? 'bg-purple-500 hover:bg-purple-600 text-white'
                    : 'bg-gray-300 text-gray-500 cursor-not-allowed'
                }`}
              >
                Verify CAPTCHA & Send OTP
              </button>

              <button
                onClick={() => setCurrentView('dashboard')}
                className="w-full py-2 text-gray-600 hover:text-gray-800 font-medium"
              >
                ‚Üê Back to Dashboard
              </button>
            </div>
          ) : (
            /* OTP Step */
            <div className="space-y-6">
              <div>
                <label className="block text-sm font-bold text-gray-800 mb-3">Step 2: Enter OTP</label>
                
                <div className="bg-green-50 border-2 border-green-200 rounded-lg p-4 mb-4">
                  <p className="text-sm text-green-800">
                    ‚úÖ CAPTCHA verified successfully!
                  </p>
                  <p className="text-sm text-green-700 mt-2">
                    üì± OTP sent to: <strong>{phoneNumber.replace(/(\d{3})(\d{3})(\d{4})/, '$1-***-$3')}</strong>
                  </p>
                  <div className="mt-3 p-3 bg-yellow-100 border-2 border-yellow-400 rounded-lg">
                    <p className="text-xs text-yellow-800 font-semibold mb-1">üîë Your OTP (for demo):</p>
                    <p className="text-2xl font-bold text-center text-yellow-900 tracking-widest">{generatedOTP}</p>
                    <p className="text-xs text-yellow-700 mt-2 text-center">Copy this 6-digit code below</p>
                  </div>
                </div>

                <input
                  type="text"
                  value={otpInput}
                  onChange={(e) => setOtpInput(e.target.value.replace(/\D/g, ''))}
                  className="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent text-center text-2xl font-bold tracking-widest"
                  placeholder="000000"
                  maxLength="6"
                />
              </div>

              <button
                onClick={handleOTPSubmit}
                disabled={otpInput.length !== 6}
                className={`w-full py-3 rounded-lg font-bold text-lg transition ${
                  otpInput.length === 6
                    ? 'bg-purple-500 hover:bg-purple-600 text-white'
                    : 'bg-gray-300 text-gray-500 cursor-not-allowed'
                }`}
              >
                Verify OTP & Access Analytics
              </button>

              <button
                onClick={generateOTP}
                className="w-full py-2 text-purple-600 hover:text-purple-800 font-medium"
              >
                üîÑ Resend OTP
              </button>

              <button
                onClick={() => {
                  setStep(1);
                  setCaptchaInput('');
                  setOtpInput('');
                  generateCaptcha();
                }}
                className="w-full py-2 text-gray-600 hover:text-gray-800 font-medium"
              >
                ‚Üê Back to CAPTCHA
              </button>
            </div>
          )}

          <div className="mt-6 p-4 bg-blue-50 border border-blue-200 rounded-lg">
            <p className="text-xs text-blue-800 text-center">
              üîí This is a secure section. Both CAPTCHA and OTP verification are required to access financial analytics.
            </p>
          </div>
        </div>
      </div>
    );
  };

  const AnalyticsDashboard = () => {
    return (
      <div className="min-h-screen bg-gray-50 p-4 md:p-8">
        <div className="max-w-7xl mx-auto">
          {/* Header */}
          <div className="bg-gradient-to-r from-indigo-500 to-purple-600 rounded-t-xl shadow-lg p-6 text-white">
            <div className="flex justify-between items-center">
              <div>
                <h2 className="text-3xl font-bold flex items-center mb-2">
                  <TrendingUp className="w-8 h-8 mr-3" />
                  Analytics Dashboard
                </h2>
                <p className="text-indigo-100">Monthly performance metrics and insights</p>
              </div>
              <button
                onClick={() => {
                  setIsAnalyticsAuthenticated(false);
                  setCurrentView('dashboard');
                }}
                className="px-6 py-2 bg-white text-purple-600 rounded-lg hover:bg-gray-100 transition font-semibold"
              >
                Back to Dashboard
              </button>
            </div>
          </div>

          <div className="bg-white rounded-b-xl shadow-lg p-8">
            {/* Monthly Stats Grid */}
            <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
              {/* Total Loans Given by Month */}
              <div className="bg-gradient-to-br from-blue-50 to-blue-100 rounded-xl p-6 border-2 border-blue-200">
                <div className="flex items-center justify-between mb-3">
                  <div className="w-12 h-12 bg-blue-500 rounded-lg flex items-center justify-center">
                    <DollarSign className="w-6 h-6 text-white" />
                  </div>
                  <span className="text-xs bg-blue-200 text-blue-800 px-2 py-1 rounded-full font-semibold">Monthly</span>
                </div>
                <h4 className="text-sm font-semibold text-blue-900 mb-2">Total Loans Given</h4>
                <p className="text-3xl font-bold text-blue-700 mb-1">‚Çπ12.5L</p>
                <p className="text-xs text-blue-600">This month: Nov 2024</p>
              </div>

              {/* Interest Collected */}
              <div className="bg-gradient-to-br from-green-50 to-green-100 rounded-xl p-6 border-2 border-green-200">
                <div className="flex items-center justify-between mb-3">
                  <div className="w-12 h-12 bg-green-500 rounded-lg flex items-center justify-center">
                    <TrendingUp className="w-6 h-6 text-white" />
                  </div>
                  <span className="text-xs bg-green-200 text-green-800 px-2 py-1 rounded-full font-semibold">Monthly</span>
                </div>
                <h4 className="text-sm font-semibold text-green-900 mb-2">Interest Collected</h4>
                <p className="text-3xl font-bold text-green-700 mb-1">‚Çπ2.8L</p>
                <p className="text-xs text-green-600">This month: Nov 2024</p>
              </div>

              {/* Closed Loan Amount */}
              <div className="bg-gradient-to-br from-orange-50 to-orange-100 rounded-xl p-6 border-2 border-orange-200">
                <div className="flex items-center justify-between mb-3">
                  <div className="w-12 h-12 bg-orange-500 rounded-lg flex items-center justify-center">
                    <Package className="w-6 h-6 text-white" />
                  </div>
                  <span className="text-xs bg-orange-200 text-orange-800 px-2 py-1 rounded-full font-semibold">Monthly</span>
                </div>
                <h4 className="text-sm font-semibold text-orange-900 mb-2">Closed Loan Amount</h4>
                <p className="text-3xl font-bold text-orange-700 mb-1">‚Çπ8.2L</p>
                <p className="text-xs text-orange-600">This month: Nov 2024</p>
              </div>

              {/* Total Revenue */}
              <div className="bg-gradient-to-br from-purple-50 to-purple-100 rounded-xl p-6 border-2 border-purple-200">
                <div className="flex items-center justify-between mb-3">
                  <div className="w-12 h-12 bg-purple-500 rounded-lg flex items-center justify-center">
                    <TrendingUp className="w-6 h-6 text-white" />
                  </div>
                  <span className="text-xs bg-purple-200 text-purple-800 px-2 py-1 rounded-full font-semibold">Monthly</span>
                </div>
                <h4 className="text-sm font-semibold text-purple-900 mb-2">Total Revenue</h4>
                <p className="text-3xl font-bold text-purple-700 mb-1">‚Çπ11.0L</p>
                <p className="text-xs text-purple-600">Closed + Interest</p>
              </div>
            </div>

            {/* Monthly Graphs */}
            <div className="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
              {/* Loans Given Per Month */}
              <div className="bg-gray-50 rounded-xl p-6 border border-gray-200">
                <h3 className="text-lg font-bold text-gray-800 mb-4 flex items-center">
                  <div className="w-2 h-2 bg-blue-500 rounded-full mr-2"></div>
                  Monthly Loans Given (in Lakhs)
                </h3>
                <div className="space-y-3">
                  {[
                    { month: 'Jan', amount: 15.2, percentage: 85 },
                    { month: 'Feb', amount: 12.8, percentage: 71 },
                    { month: 'Mar', amount: 18.5, percentage: 100 },
                    { month: 'Apr', amount: 14.2, percentage: 77 },
                    { month: 'May', amount: 16.8, percentage: 91 },
                    { month: 'Jun', amount: 13.5, percentage: 73 },
                    { month: 'Jul', amount: 17.2, percentage: 93 },
                    { month: 'Aug', amount: 15.8, percentage: 85 },
                    { month: 'Sep', amount: 14.5, percentage: 78 },
                    { month: 'Oct', amount: 16.2, percentage: 88 },
                    { month: 'Nov', amount: 12.5, percentage: 68 }
                  ].map((data) => (
                    <div key={data.month}>
                      <div className="flex justify-between text-sm mb-1">
                        <span className="font-semibold text-gray-700">{data.month}</span>
                        <span className="font-bold text-blue-600">‚Çπ{data.amount}L</span>
                      </div>
                      <div className="w-full bg-gray-200 rounded-full h-3">
                        <div 
                          className="bg-gradient-to-r from-blue-500 to-blue-600 h-3 rounded-full transition-all duration-500"
                          style={{ width: `${data.percentage}%` }}
                        ></div>
                      </div>
                    </div>
                  ))}
                </div>
              </div>

              {/* Interest Collected Per Month */}
              <div className="bg-gray-50 rounded-xl p-6 border border-gray-200">
                <h3 className="text-lg font-bold text-gray-800 mb-4 flex items-center">
                  <div className="w-2 h-2 bg-green-500 rounded-full mr-2"></div>
                  Monthly Interest Collected (in Lakhs)
                </h3>
                <div className="space-y-3">
                  {[
                    { month: 'Jan', amount: 3.2, percentage: 89 },
                    { month: 'Feb', amount: 2.8, percentage: 78 },
                    { month: 'Mar', amount: 3.6, percentage: 100 },
                    { month: 'Apr', amount: 2.9, percentage: 81 },
                    { month: 'May', amount: 3.4, percentage: 94 },
                    { month: 'Jun', amount: 2.7, percentage: 75 },
                    { month: 'Jul', amount: 3.5, percentage: 97 },
                    { month: 'Aug', amount: 3.1, percentage: 86 },
                    { month: 'Sep', amount: 2.9, percentage: 81 },
                    { month: 'Oct', amount: 3.3, percentage: 92 },
                    { month: 'Nov', amount: 2.8, percentage: 78 }
                  ].map((data) => (
                    <div key={data.month}>
                      <div className="flex justify-between text-sm mb-1">
                        <span className="font-semibold text-gray-700">{data.month}</span>
                        <span className="font-bold text-green-600">‚Çπ{data.amount}L</span>
                      </div>
                      <div className="w-full bg-gray-200 rounded-full h-3">
                        <div 
                          className="bg-gradient-to-r from-green-500 to-green-600 h-3 rounded-full transition-all duration-500"
                          style={{ width: `${data.percentage}%` }}
                        ></div>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            </div>

            {/* Bottom Section - Closed Loans & Total Revenue */}
            <div className="grid grid-cols-1 lg:grid-cols-2 gap-6">
              {/* Closed Loan Amount Per Month */}
              <div className="bg-gray-50 rounded-xl p-6 border border-gray-200">
                <h3 className="text-lg font-bold text-gray-800 mb-4 flex items-center">
                  <div className="w-2 h-2 bg-orange-500 rounded-full mr-2"></div>
                  Monthly Closed Loan Amount (in Lakhs)
                </h3>
                <div className="space-y-3">
                  {[
                    { month: 'Jan', amount: 10.5, percentage: 88 },
                    { month: 'Feb', amount: 9.2, percentage: 77 },
                    { month: 'Mar', amount: 11.8, percentage: 99 },
                    { month: 'Apr', amount: 8.9, percentage: 75 },
                    { month: 'May', amount: 10.2, percentage: 86 },
                    { month: 'Jun', amount: 9.5, percentage: 80 },
                    { month: 'Jul', amount: 11.2, percentage: 94 },
                    { month: 'Aug', amount: 10.8, percentage: 91 },
                    { month: 'Sep', amount: 9.8, percentage: 83 },
