    const [displayedLoans, setDisplayedLoans] = useState(auctionLoans.slice(0, 15));
    const [selectedLoans, setSelectedLoans] = useState([]);

    const toggleSelectLoan = (slNo) => {
      if (selectedLoans.includes(slNo)) {
        setSelectedLoans(selectedLoans.filter(id => id !== slNo));
      } else {
        setSelectedLoans([...selectedLoans, slNo]);
      }
    };

    const markAsAuctioned = () => {
      if (selectedLoans.length === 0) {
        alert('Please select at least one loan to mark as auctioned');
        return;
      }
      alert(`${selectedLoans.length} loan(s) marked as AUCTIONED successfully!`);
      setSelectedLoans([]);
    };

    const downloadCSV = () => {
      // Create CSV content with proper escaping
      const header = 'SL.NO,Customer ID,Date,Amount,Name,Relation,Address,Articles,Months Overdue,Status\n';
      const rows = auctionLoans.map(loan => {
        return [
          loan.slNo,
          loan.customerId,
          loan.date,
          loan.amount,
          `"${loan.name}"`,
          `"${loan.relation}"`,
          `"${loan.address}"`,
          `"${loan.articles}"`,
          loan.months,
          loan.status
        ].join(',');
      }).join('\n');

      const csvContent = header + rows;

      // Create blob and download
      const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
      const link = document.createElement('a');
      const url = URL.createObjectURL(blob);
      
      link.setAttribute('href', url);
      link.setAttribute('download', `Auction_List_${new Date().toISOString().split('T')[0]}.csv`);
      link.style.visibility = 'hidden';
      
      document.body.appendChild(link);
      link.click();
      document.body.removeChild(link);
      
      alert('CSV file downloaded successfully!');
    };

