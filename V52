                      <div className="flex justify-between text-sm mb-1">
                        <span className="font-semibold text-gray-700">{data.month}</span>
                        <span className="font-bold text-orange-600">‚Çπ{data.amount}L</span>
                      </div>
                      <div className="w-full bg-gray-200 rounded-full h-3">
                        <div 
                          className="bg-gradient-to-r from-orange-500 to-orange-600 h-3 rounded-full transition-all duration-500"
                          style={{ width: `${data.percentage}%` }}
                        ></div>
                      </div>
                    </div>
                  ))}
                </div>
              </div>

              {/* Total Revenue (Closed + Interest) */}
              <div className="bg-gradient-to-br from-purple-50 to-indigo-50 rounded-xl p-6 border-2 border-purple-200">
                <h3 className="text-lg font-bold text-gray-800 mb-4 flex items-center">
                  <div className="w-2 h-2 bg-purple-500 rounded-full mr-2"></div>
                  Total Revenue: Closed + Interest (in Lakhs)
                </h3>
                <div className="space-y-3">
                  {[
                    { month: 'Jan', closed: 10.5, interest: 3.2, total: 13.7, percentage: 91 },
                    { month: 'Feb', closed: 9.2, interest: 2.8, total: 12.0, percentage: 80 },
                    { month: 'Mar', closed: 11.8, interest: 3.6, total: 15.4, percentage: 100 },
                    { month: 'Apr', closed: 8.9, interest: 2.9, total: 11.8, percentage: 77 },
                    { month: 'May', closed: 10.2, interest: 3.4, total: 13.6, percentage: 88 },
                    { month: 'Jun', closed: 9.5, interest: 2.7, total: 12.2, percentage: 79 },
                    { month: 'Jul', closed: 11.2, interest: 3.5, total: 14.7, percentage: 95 },
                    { month: 'Aug', closed: 10.8, interest: 3.1, total: 13.9, percentage: 90 },
                    { month: 'Sep', closed: 9.8, interest: 2.9, total: 12.7, percentage: 82 },
                    { month: 'Oct', closed: 10.5, interest: 3.3, total: 13.8, percentage: 90 },
                    { month: 'Nov', closed: 8.2, interest: 2.8, total: 11.0, percentage: 71 }
                  ].map((data) => (
                    <div key={data.month}>
                      <div className="flex justify-between text-sm mb-1">
                        <span className="font-semibold text-gray-700">{data.month}</span>
                        <div className="text-right">
                          <span className="font-bold text-purple-700">‚Çπ{data.total}L</span>
                          <div className="text-xs text-gray-600 mt-0.5">
                            ‚Çπ{data.closed}L + ‚Çπ{data.interest}L
                          </div>
                        </div>
                      </div>
                      <div className="w-full bg-gray-200 rounded-full h-4">
                        <div className="flex h-4 rounded-full overflow-hidden">
                          <div 
                            className="bg-gradient-to-r from-orange-500 to-orange-600 transition-all duration-500"
                            style={{ width: `${(data.closed / data.total) * data.percentage}%` }}
                          ></div>
                          <div 
                            className="bg-gradient-to-r from-green-500 to-green-600 transition-all duration-500"
                            style={{ width: `${(data.interest / data.total) * data.percentage}%` }}
                          ></div>
                        </div>
                      </div>
                      <div className="flex justify-between text-xs text-gray-500 mt-1">
                        <span>üü† Closed Amount</span>
                        <span>üü¢ Interest</span>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            </div>

            {/* Summary Footer */}
            <div className="mt-8 bg-gradient-to-r from-indigo-100 to-purple-100 rounded-xl p-6 border-2 border-indigo-200">
              <div className="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
                <div>
                  <p className="text-sm text-indigo-700 font-semibold mb-1">Year-to-Date Loans</p>
                  <p className="text-3xl font-bold text-indigo-900">‚Çπ165.2L</p>
                </div>
                <div>
                  <p className="text-sm text-purple-700 font-semibold mb-1">Year-to-Date Interest</p>
                  <p className="text-3xl font-bold text-purple-900">‚Çπ35.4L</p>
                </div>
                <div>
                  <p className="text-sm text-pink-700 font-semibold mb-1">Total Revenue (YTD)</p>
                  <p className="text-3xl font-bold text-pink-900">‚Çπ145.6L</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    );
  };

  return (
    <div>
      {currentView === 'login' && <LoginScreen />}
      {currentView === 'signup' && <SignupScreen />}
      {currentView === 'forgotPassword' && <ForgotPasswordScreen />}
      {currentView === 'dashboard' && <DashboardScreen />}
      {currentView === 'profile' && <ProfileScreen />}
      {currentView === 'newLoan' && <NewLoanForm />}
      {currentView === 'redeem' && <RedeemLoanForm />}
      {currentView === 'auction' && <AuctionListModule />}
      {currentView === 'analytics' && !isAnalyticsAuthenticated && <AnalyticsAuthScreen />}
      {currentView === 'analytics' && isAnalyticsAuthenticated && <AnalyticsDashboard />}
    </div>
  );
};

export default GoldLoanManagementSystem;
