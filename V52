            <div className="flex justify-center">
              <button
                onClick={handleSubmit}
                className="px-12 py-4 bg-gradient-to-r from-green-600 to-green-700 text-white rounded-lg hover:from-green-700 hover:to-green-800 transition font-bold text-lg shadow-lg"
              >
                Create Loan & Save
              </button>
            </div>
          </div>
        </div>
      </div>
    );
  };

  const RedeemLoanForm = () => {
    const [redeemForm, setRedeemForm] = useState({
      redeemId: '',
      customerId: '',
      customerName: '',
      loanDate: '',
      redemptionDate: new Date().toISOString().split('T')[0],
      loanAmount: '',
      interestAmount: '',
      totalPayable: '',
      status: 'PENDING'
    });

    const calculateInterest = () => {
      if (!redeemForm.loanDate || !redeemForm.redemptionDate || !redeemForm.loanAmount) return;

      const loanDate = new Date(redeemForm.loanDate);
      const redeemDate = new Date(redeemForm.redemptionDate);
      const diffTime = Math.abs(redeemDate - loanDate);
      const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));

      const fullMonths = Math.floor(diffDays / 30);
      const remainingDays = diffDays % 30;

      let interestRate = fullMonths * 2;
      if (remainingDays >= 15) {
        interestRate += 2;
      } else if (remainingDays > 0) {
        interestRate += 1;
      }

      const interest = (parseFloat(redeemForm.loanAmount) * interestRate) / 100;
      const total = parseFloat(redeemForm.loanAmount) + interest;

      setRedeemForm(prev => ({
        ...prev,
        interestAmount: interest.toFixed(2),
        totalPayable: total.toFixed(2)
      }));
    };

    const fetchLoanDetails = () => {
      setRedeemForm(prev => ({
        ...prev,
        customerName: 'Rajesh Kumar',
        loanDate: '2024-02-15',
        loanAmount: '50000'
      }));
      setTimeout(calculateInterest, 100);
    };

    const handleRedeem = () => {
      alert(`Loan ${redeemForm.status === 'CLOSED' ? 'closed' : 'marked as pending'} successfully!`);
      setCurrentView('dashboard');
    };

    return (
      <div className="min-h-screen bg-gray-50 p-4 md:p-8">
        <div className="max-w-5xl mx-auto">
          <div className="bg-white rounded-t-xl shadow-lg p-6 border-b-2 border-green-500">
            <div className="flex justify-between items-center">
              <div>
                <h2 className="text-3xl font-bold text-gray-800 mb-2">Redeem Loan / Closure</h2>
                <p className="text-gray-600">Process customer redemption and return gold/silver</p>
              </div>
              <button
                onClick={() => setCurrentView('dashboard')}
                className="px-6 py-2 bg-gray-200 rounded-lg hover:bg-gray-300 transition"
              >
                Back to Dashboard
              </button>
            </div>
          </div>

          <div className="bg-white shadow-lg border-2 border-gray-800 p-8">
            <div className="text-center mb-6 border-b-2 border-gray-800 pb-4">
              <h3 className="text-2xl font-bold">BALAJI BANKERS</h3>
              <p className="text-gray-700">DEVALAPURA, Nagamangala Tq.</p>
              <p className="text-xl font-bold mt-2">PAWN BROKERS - RECEIPT</p>
            </div>

            <div className="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
              <div>
                <label className="block text-sm font-bold text-gray-800 mb-2">Receipt / Redeem ID No.</label>
                <input
                  type="text"
                  value={redeemForm.redeemId}
                  onChange={(e) => setRedeemForm({...redeemForm, redeemId: e.target.value})}
                  className="w-full px-4 py-3 border-2 border-gray-800 rounded-lg focus:ring-2 focus:ring-green-500 text-2xl font-bold text-red-600"
                  placeholder="3196"
                />
              </div>
              <div>
                <label className="block text-sm font-bold text-gray-800 mb-2">Date of Redemption</label>
                <input
                  type="date"
                  value={redeemForm.redemptionDate}
                  onChange={(e) => {
                    setRedeemForm({...redeemForm, redemptionDate: e.target.value});
                    setTimeout(calculateInterest, 100);
                  }}
                  className="w-full px-4 py-3 border-2 border-gray-800 rounded-lg focus:ring-2 focus:ring-green-500"
                />
              </div>
            </div>

            <div className="bg-yellow-50 border-2 border-yellow-500 rounded-lg p-6 mb-6">
              <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <label className="block text-sm font-bold text-gray-800 mb-2">Customer ID / Pawn No.</label>
                  <div className="flex gap-2">
                    <input
                      type="text"
                      value={redeemForm.customerId}
                      onChange={(e) => setRedeemForm({...redeemForm, customerId: e.target.value})}
                      className="flex-1 px-4 py-3 border-2 border-gray-800 rounded-lg focus:ring-2 focus:ring-green-500"
                      placeholder="Enter Customer ID"
                    />
                    <button
                      onClick={fetchLoanDetails}
                      className="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-semibold"
                    >
                      Fetch
                    </button>
                  </div>
                </div>
                <div>
                  <label className="block text-sm font-bold text-gray-800 mb-2">Received From Sri/Smt.</label>
                  <input
                    type="text"
                    value={redeemForm.customerName}
                    className="w-full px-4 py-3 border-2 border-gray-800 rounded-lg bg-gray-100"
                    placeholder="Auto-fetched customer name"
                    readOnly
                  />
                </div>
              </div>
            </div>

            <div className="bg-blue-50 border-2 border-blue-800 rounded-lg p-6 mb-6">
              <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <label className="block text-sm font-bold text-gray-800 mb-2">Original Loan Date</label>
                  <input
                    type="date"
                    value={redeemForm.loanDate}
                    onChange={(e) => {
                      setRedeemForm({...redeemForm, loanDate: e.target.value});
                      setTimeout(calculateInterest, 100);
                    }}
                    className="w-full px-4 py-3 border-2 border-gray-800 rounded-lg bg-white"
                  />
                </div>
                <div>
                  <label className="block text-sm font-bold text-gray-800 mb-2">Duration</label>
                  <div className="w-full px-4 py-3 border-2 border-gray-800 rounded-lg bg-white font-bold text-blue-700">
                    {redeemForm.loanDate && redeemForm.redemptionDate ? 
                      `${Math.ceil((new Date(redeemForm.redemptionDate) - new Date(redeemForm.loanDate)) / (1000 * 60 * 60 * 24))} days` : 
                      'Select dates'
                    }
                  </div>
                </div>
              </div>
            </div>

            <div className="border-4 border-gray-800 rounded-lg overflow-hidden mb-6">
              <table className="w-full">
                <tbody>
                  <tr>
                    <td className="border-2 border-gray-800 px-6 py-4 font-bold bg-gray-100 w-1/2" rowSpan="3">
                      <div className="text-center">
                        <p className="text-sm mb-2">Signature of the</p>
                        <p className="text-sm mb-8">P.B. or their Agent</p>
                        <div className="border-t-2 border-gray-400 pt-2">
                          <p className="text-xs text-gray-600">(Digital signature area)</p>
                        </div>
                      </div>
                    </td>
                    <td className="border-2 border-gray-800 px-6 py-4 font-bold bg-gray-200" colSpan="2">
                      <div className="flex justify-between">
                        <span>Rs.</span>
                        <span>Ps.</span>
                      </div>
                    </td>
                  </tr>
                  <tr>
                    <td className="border-2 border-gray-800 px-6 py-4 font-bold">Amount of Loan</td>
                    <td className="border-2 border-gray-800 px-6 py-4 text-right">
                      <input
                        type="number"
                        value={redeemForm.loanAmount}
                        onChange={(e) => {
                          setRedeemForm({...redeemForm, loanAmount: e.target.value});
                          setTimeout(calculateInterest, 100);
                        }}
                        className="w-full px-4 py-2 border-2 border-gray-600 rounded text-right font-bold text-lg"
                        placeholder="50000"
                      />
                    </td>
                  </tr>
                  <tr>
                    <td className="border-2 border-gray-800 px-6 py-4 font-bold">Interest</td>
                    <td className="border-2 border-gray-800 px-6 py-4 text-right">
                      <input
                        type="number"
                        value={redeemForm.interestAmount}
                        onChange={(e) => {
                          setRedeemForm({...redeemForm, interestAmount: e.target.value});
                          const total = parseFloat(redeemForm.loanAmount || 0) + parseFloat(e.target.value || 0);
                          setRedeemForm(prev => ({...prev, interestAmount: e.target.value, totalPayable: total.toFixed(2)}));
                        }}
                        className="w-full px-4 py-2 border-2 border-gray-600 rounded text-right font-bold text-lg bg-yellow-50"
                        placeholder="Auto-calculated"
                      />
                    </td>
                  </tr>
                  <tr>
                    <td className="border-2 border-gray-800 px-6 py-4 font-bold bg-gray-100" colSpan="2">
                      <span className="text-xl">TOTAL</span>
                    </td>
                    <td className="border-2 border-gray-800 px-6 py-4 text-right bg-green-100">
                      <div className="text-2xl font-bold text-green-700">
                        ‚Çπ{redeemForm.totalPayable || '0.00'}
                      </div>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>

            <div className="bg-purple-50 border-2 border-purple-600 rounded-lg p-6 mb-6">
              <h4 className="font-bold text-gray-800 mb-3">Interest Calculation Details:</h4>
              <div className="text-sm text-gray-700 space-y-1">
                <p>‚Ä¢ Interest Rate: <strong>2% per month</strong></p>
                <p>‚Ä¢ Full months: <strong>2%</strong> per month</p>
                <p>‚Ä¢ Days 1-14: <strong>1%</strong> (half month)</p>
                <p>‚Ä¢ Days 15+: <strong>2%</strong> (full month)</p>
                <p className="mt-2 text-xs text-gray-600 italic">
                  Note: Interest can be manually edited if needed
                </p>
              </div>
            </div>

            <div className="bg-white border-2 border-gray-800 rounded-lg p-6 mb-6">
              <label className="block text-sm font-bold text-gray-800 mb-3">Status</label>
              <div className="flex gap-4">
                <label className="flex items-center space-x-2 cursor-pointer">
                  <input
                    type="radio"
                    name="status"
                    value="CLOSED"
                    checked={redeemForm.status === 'CLOSED'}
                    onChange={(e) => setRedeemForm({...redeemForm, status: e.target.value})}
                    className="w-5 h-5"
                  />
                  <span className="font-semibold text-green-700">CLOSED (Payment Complete)</span>
                </label>
                <label className="flex items-center space-x-2 cursor-pointer">
                  <input
                    type="radio"
                    name="status"
                    value="PENDING"
                    checked={redeemForm.status === 'PENDING'}
                    onChange={(e) => setRedeemForm({...redeemForm, status: e.target.value})}
                    className="w-5 h-5"
                  />
                  <span className="font-semibold text-orange-700">PENDING (Partial Payment)</span>
                </label>
              </div>
            </div>

            <div className="flex justify-center gap-4">
              <button
                onClick={handleRedeem}
                className="px-12 py-4 bg-gradient-to-r from-green-600 to-green-700 text-white rounded-lg hover:from-green-700 hover:to-green-800 transition font-bold text-lg shadow-lg"
              >
                Process Redemption
              </button>
              <button
                onClick={() => {
                  setRedeemForm({
                    redeemId: '', customerId: '', customerName: '', loanDate: '',
                    redemptionDate: new Date().toISOString().split('T')[0],
                    loanAmount: '', interestAmount: '', totalPayable: '', status: 'PENDING'
                  });
                }}
                className="px-12 py-4 bg-gray-500 text-white rounded-lg hover:bg-gray-600 transition font-bold text-lg"
              >
                Clear Form
              </button>
            </div>
          </div>
        </div>
      </div>
    );
  };

