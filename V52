import React, { useState, useEffect } from 'react';
import { AlertCircle, TrendingUp, Users, DollarSign, Package, LogOut, Eye, EyeOff, Search, Filter, Calendar, FileText, Bell } from 'lucide-react';

const GoldLoanManagementSystem = () => {
  const [currentView, setCurrentView] = useState('login');
  const [isLoggedIn, setIsLoggedIn] = useState(false);
  const [isAnalyticsAuthenticated, setIsAnalyticsAuthenticated] = useState(false);
  const [goldPrice, setGoldPrice] = useState({ '22k': 5850, '24k': 6350 });
  const [silverPrice, setSilverPrice] = useState(72);
  
  // Store user profile data (in production, this would come from database)
  const [userProfile, setUserProfile] = useState({
    name: '',
    email: '',
    phone: '',
    address: '',
    aadhaar: '',
    userId: '',
    bankerName: ''
  });
  
  // Dashboard visibility toggles
  const [visibility, setVisibility] = useState({
    totalLoans: true,
    pendingAmount: true,
    interestCollected: true,
    totalCustomers: true
  });
  
  // Dashboard filters
  const [dashboardFilter, setDashboardFilter] = useState('30days');
  const [loanTypeFilter, setLoanTypeFilter] = useState('all'); // all, current, closed
  
  // Search functionality
  const [searchQuery, setSearchQuery] = useState('');
  const [searchFilter, setSearchFilter] = useState('customerId'); // customerId, mobile, name, date, taluk, hobli
  
  const [dashboardData] = useState({
    totalLoans: 2500000,
    pendingAmount: 850000,
    interestCollected: 125000,
    totalCustomers: 156,
    currentLoans: 89,
    closedLoans: 67,
    approaching11Months: 12,
    auctionEligible: 5
  });

  // Sample loan data
  const [loans] = useState([
    { id: 'GL001', name: 'Rajesh Kumar', mobile: '9876543210', date: '2024-02-15', amount: 50000, status: 'Taken In', months: 9 },
    { id: 'GL002', name: 'Priya Sharma', mobile: '9876543211', date: '2024-01-10', amount: 75000, status: 'Taken In', months: 10 },
    { id: 'GL003', name: 'Amit Patel', mobile: '9876543212', date: '2023-11-20', amount: 100000, status: 'Taken In', months: 12 },
    { id: 'GL004', name: 'Sunita Devi', mobile: '9876543213', date: '2024-03-05', amount: 35000, status: 'Closed', months: 8 },
    { id: 'GL005', name: 'Ramesh Reddy', mobile: '9876543214', date: '2023-10-15', amount: 85000, status: 'Auction Eligible', months: 13 },
  ]);

  const [loginForm, setLoginForm] = useState({
    userId: '',
    password: '',
    otp: ''
  });

  const [signupForm, setSignupForm] = useState({
    name: '',
    address: '',
    aadhaar: '',
    email: '',
    phone: '',
    userId: '',
    password: '',
    confirmPassword: '',
    bankerName: ''
  });

  // Removed automatic price updates to prevent form re-renders
  // Prices are now static until manually refreshed



  const handleLogout = () => {
    setIsLoggedIn(false);
    setCurrentView('login');
  };

  const handleLogin = () => {
    if (loginForm.userId && loginForm.password) {
      setIsLoggedIn(true);
      setCurrentView('dashboard');
    }
  };

  const handleSignup = () => {
    if (!signupForm.name || !signupForm.phone || !signupForm.email || !signupForm.userId || !signupForm.password) {
      alert('Please fill all required fields!');
      return;
    }
    
    if (signupForm.password !== signupForm.confirmPassword) {
      alert('Passwords do not match!');
      return;
    }
    
    if (signupForm.aadhaar && signupForm.aadhaar.length !== 12) {
      alert('Aadhaar number must be 12 digits!');
      return;
    }
    
    // Save user profile
    setUserProfile({
      name: signupForm.name,
      email: signupForm.email,
      phone: signupForm.phone,
      address: signupForm.address,
      aadhaar: signupForm.aadhaar,
      userId: signupForm.userId,
      bankerName: signupForm.bankerName
    });
    
    alert('Account created successfully! Please login with your credentials.');
    setCurrentView('login');
  };

  const toggleVisibility = (field) => {
    setVisibility(prev => ({...prev, [field]: !prev[field]}));
  };

  const filteredLoans = loans.filter(loan => {
    // Filter by loan type
    if (loanTypeFilter === 'current' && loan.status === 'Closed') return false;
    if (loanTypeFilter === 'closed' && loan.status !== 'Closed') return false;
    
    // Filter by search
    if (searchQuery) {
      const query = searchQuery.toLowerCase();
      switch(searchFilter) {
        case 'customerId':
          return loan.id.toLowerCase().includes(query);
        case 'mobile':
          return loan.mobile.includes(query);
        case 'name':
          return loan.name.toLowerCase().includes(query);
        case 'date':
          return loan.date.includes(query);
        default:
          return true;
      }
    }
    
    return true;
  });

  const LoginScreen = () => {
    const handleInputChange = (field, value) => {
      setLoginForm(prev => ({...prev, [field]: value}));
    };

    return (
      <div className="min-h-screen bg-gradient-to-br from-yellow-50 to-yellow-100 flex items-center justify-center p-4">
        <div className="bg-white rounded-2xl shadow-2xl w-full max-w-md p-8">
          <div className="text-center mb-8">
            <div className="w-16 h-16 bg-yellow-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <Package className="w-8 h-8 text-white" />
            </div>
            <h1 className="text-3xl font-bold text-gray-800">Gold Loan Manager</h1>
            <p className="text-gray-600 mt-2">Secure & Efficient Loan Management</p>
          </div>

          <div className="bg-gradient-to-r from-yellow-400 to-yellow-500 rounded-xl p-4 mb-6">
            <div className="flex justify-between items-center text-white">
              <div>
                <p className="text-xs opacity-90">Gold 22K</p>
                <p className="text-lg font-bold">‚Çπ{goldPrice['22k'].toFixed(0)}/g</p>
              </div>
              <div>
                <p className="text-xs opacity-90">Gold 24K</p>
                <p className="text-lg font-bold">‚Çπ{goldPrice['24k'].toFixed(0)}/g</p>
              </div>
              <div>
                <p className="text-xs opacity-90">Silver</p>
                <p className="text-lg font-bold">‚Çπ{silverPrice.toFixed(0)}/g</p>
              </div>
            </div>
          </div>

          <div className="space-y-4">
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">User ID</label>
              <input
                type="text"
                value={loginForm.userId}
                onChange={(e) => handleInputChange('userId', e.target.value)}
                className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent"
                placeholder="Enter your User ID"
              />
            </div>

            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">Password</label>
              <input
                type="password"
                value={loginForm.password}
                onChange={(e) => handleInputChange('password', e.target.value)}
                className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent"
                placeholder="Enter your password"
              />
            </div>

            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">OTP</label>
              <input
                type="text"
                value={loginForm.otp}
                onChange={(e) => handleInputChange('otp', e.target.value)}
                className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent"
                placeholder="Enter OTP"
              />
            </div>

            <button
              onClick={handleLogin}
              className="w-full bg-yellow-500 hover:bg-yellow-600 text-white font-semibold py-3 rounded-lg transition duration-200"
            >
              Login
            </button>
          </div>

          <div className="mt-6 text-center">
            <button
              onClick={() => setCurrentView('signup')}
              className="text-yellow-600 hover:text-yellow-700 font-medium mr-4"
            >
              Don't have an account? Sign Up
            </button>
            <span className="text-gray-400">|</span>
            <button
              onClick={() => setCurrentView('forgotPassword')}
              className="text-yellow-600 hover:text-yellow-700 font-medium ml-4"
            >
              Forgot Password?
            </button>
          </div>
        </div>
      </div>
    );
  };

  const ForgotPasswordScreen = () => {
    const [resetEmail, setResetEmail] = useState('');
    const [resetOTP, setResetOTP] = useState('');
    const [newPassword, setNewPassword] = useState('');
    const [confirmNewPassword, setConfirmNewPassword] = useState('');
    const [resetStep, setResetStep] = useState(1); // 1=Email, 2=OTP, 3=NewPassword
    const [generatedResetOTP, setGeneratedResetOTP] = useState('');

    const handleSendResetOTP = () => {
      if (!resetEmail) {
        alert('Please enter your email!');
        return;
      }
      const otp = Math.floor(100000 + Math.random() * 900000).toString();
      setGeneratedResetOTP(otp);
      alert(`Password reset OTP sent to ${resetEmail}: ${otp}\n(In production, this would be sent via email)`);
      setResetStep(2);
    };

    const handleVerifyResetOTP = () => {
      if (resetOTP === generatedResetOTP) {
        setResetStep(3);
      } else {
        alert('Incorrect OTP! Please try again.');
        setResetOTP('');
      }
    };

    const handleResetPassword = () => {
      if (!newPassword || !confirmNewPassword) {
        alert('Please fill all fields!');
        return;
      }
      if (newPassword !== confirmNewPassword) {
        alert('Passwords do not match!');
        return;
      }
      alert('Password reset successfully! Please login with your new password.');
      setCurrentView('login');
    };

    return (
      <div className="min-h-screen bg-gradient-to-br from-yellow-50 to-yellow-100 flex items-center justify-center p-4">
        <div className="bg-white rounded-2xl shadow-2xl w-full max-w-md p-8">
          <div className="text-center mb-8">
            <div className="w-16 h-16 bg-red-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <AlertCircle className="w-8 h-8 text-white" />
            </div>
            <h1 className="text-3xl font-bold text-gray-800">Forgot Password</h1>
            <p className="text-gray-600 mt-2">Reset your account password</p>
          </div>

          {resetStep === 1 && (
            <div className="space-y-4">
              <div>
                <label className="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
                <input
                  type="email"
                  value={resetEmail}
                  onChange={(e) => setResetEmail(e.target.value)}
                  className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent"
                  placeholder="Enter your registered email"
                />
              </div>
              <button
                onClick={handleSendResetOTP}
                className="w-full bg-yellow-500 hover:bg-yellow-600 text-white font-semibold py-3 rounded-lg transition"
              >
                Send Reset OTP
              </button>
              <button
                onClick={() => setCurrentView('login')}
                className="w-full text-gray-600 hover:text-gray-800 font-medium py-2"
              >
                ‚Üê Back to Login
              </button>
            </div>
          )}

          {resetStep === 2 && (
            <div className="space-y-4">
              <div className="bg-green-50 border-2 border-green-200 rounded-lg p-4 mb-4">
                <p className="text-sm text-green-800">‚úÖ OTP sent to {resetEmail}</p>
                <div className="mt-3 p-3 bg-yellow-100 border-2 border-yellow-400 rounded-lg">
                  <p className="text-xs text-yellow-800 font-semibold mb-1">üîë Your Reset OTP:</p>
                  <p className="text-2xl font-bold text-center text-yellow-900 tracking-widest">{generatedResetOTP}</p>
                </div>
              </div>
              <div>
                <label className="block text-sm font-medium text-gray-700 mb-1">Enter OTP</label>
                <input
                  type="text"
                  value={resetOTP}
                  onChange={(e) => setResetOTP(e.target.value.replace(/\D/g, ''))}
                  className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 text-center text-2xl font-bold tracking-widest"
                  placeholder="000000"
                  maxLength="6"
                />
              </div>
              <button
                onClick={handleVerifyResetOTP}
                disabled={resetOTP.length !== 6}
                className={`w-full py-3 rounded-lg font-semibold transition ${
                  resetOTP.length === 6
                    ? 'bg-yellow-500 hover:bg-yellow-600 text-white'
                    : 'bg-gray-300 text-gray-500 cursor-not-allowed'
                }`}
              >
                Verify OTP
              </button>
              <button
                onClick={handleSendResetOTP}
                className="w-full text-yellow-600 hover:text-yellow-700 font-medium py-2"
              >
                üîÑ Resend OTP
              </button>
            </div>
          )}

          {resetStep === 3 && (
            <div className="space-y-4">
              <div className="bg-green-50 border-2 border-green-200 rounded-lg p-4 mb-4">
                <p className="text-sm text-green-800 text-center">‚úÖ OTP Verified! Create your new password</p>
              </div>
              <div>
                <label className="block text-sm font-medium text-gray-700 mb-1">New Password</label>
                <input
                  type="password"
                  value={newPassword}
                  onChange={(e) => setNewPassword(e.target.value)}
                  className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500"
                  placeholder="Enter new password"
                />
              </div>
              <div>
                <label className="block text-sm font-medium text-gray-700 mb-1">Confirm New Password</label>
                <input
                  type="password"
                  value={confirmNewPassword}
                  onChange={(e) => setConfirmNewPassword(e.target.value)}
                  className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500"
                  placeholder="Re-enter new password"
                />
              </div>
              <button
                onClick={handleResetPassword}
                className="w-full bg-green-500 hover:bg-green-600 text-white font-semibold py-3 rounded-lg transition"
              >
                Reset Password
              </button>
            </div>
          )}
        </div>
      </div>
    );
  };

  const SignupScreen = () => (
    <div className="min-h-screen bg-gradient-to-br from-yellow-50 to-yellow-100 flex items-center justify-center p-4">
      <div className="bg-white rounded-2xl shadow-2xl w-full max-w-2xl p-8 max-h-screen overflow-y-auto">
        <h1 className="text-3xl font-bold text-gray-800 mb-6 text-center">Create Account</h1>
        
        <div className="space-y-4">
          <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
              <input
                type="text"
                value={signupForm.name}
                onChange={(e) => setSignupForm({...signupForm, name: e.target.value})}
                className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent"
                placeholder="Enter full name"
              />
            </div>

            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">Phone Number</label>
              <input
                type="tel"
                value={signupForm.phone}
                onChange={(e) => setSignupForm({...signupForm, phone: e.target.value})}
                className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent"
                placeholder="Enter phone number"
              />
            </div>

            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">Email</label>
              <input
                type="email"
                value={signupForm.email}
                onChange={(e) => setSignupForm({...signupForm, email: e.target.value})}
                className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent"
                placeholder="Enter email address"
              />
            </div>

            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">Aadhaar Number</label>
              <input
                type="text"
                value={signupForm.aadhaar}
                onChange={(e) => setSignupForm({...signupForm, aadhaar: e.target.value})}
                className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent"
                placeholder="Enter 12-digit Aadhaar"
                maxLength="12"
              />
            </div>
          </div>

          <div>
            <label className="block text-sm font-medium text-gray-700 mb-1">Address</label>
            <textarea
              value={signupForm.address}
              onChange={(e) => setSignupForm({...signupForm, address: e.target.value})}
              className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent"
              rows="2"
              placeholder="Enter complete address"
            />
          </div>

          <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">Create User ID</label>
              <input
                type="text"
                value={signupForm.userId}
                onChange={(e) => setSignupForm({...signupForm, userId: e.target.value})}
                className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent"
                placeholder="Choose a unique User ID"
              />
            </div>

            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">Password</label>
              <input
                type="password"
                value={signupForm.password}
                onChange={(e) => setSignupForm({...signupForm, password: e.target.value})}
                className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent"
                placeholder="Create password"
              />
            </div>
          </div>

          <div>
            <label className="block text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
            <input
              type="password"
              value={signupForm.confirmPassword}
              onChange={(e) => setSignupForm({...signupForm, confirmPassword: e.target.value})}
              className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent"
              placeholder="Re-enter password"
            />
          </div>

          <div className="bg-yellow-50 border-2 border-yellow-400 rounded-lg p-4">
            <label className="block text-sm font-bold text-yellow-900 mb-1">
              üè¶ Banker's Name / Business Name
            </label>
            <input
              type="text"
              value={signupForm.bankerName}
              onChange={(e) => setSignupForm({...signupForm, bankerName: e.target.value})}
              className="w-full px-4 py-2 border border-yellow-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent"
              placeholder="e.g., Balaji Bankers & Jewellers"
            />
            <p className="text-xs text-yellow-700 mt-2">
              This name will appear on all dashboards and receipts
            </p>
          </div>

          <button
            onClick={handleSignup}
            className="w-full bg-yellow-500 hover:bg-yellow-600 text-white font-semibold py-3 rounded-lg transition duration-200"
          >
            Sign Up
          </button>
        </div>

        <div className="mt-6 text-center">
          <button
            onClick={() => setCurrentView('login')}
            className="text-yellow-600 hover:text-yellow-700 font-medium"
          >
            Already have an account? Login
          </button>
        </div>
      </div>
    </div>
  );

  const DashboardScreen = () => (
    <div className="min-h-screen bg-gray-50">
      {/* Header */}
      <header className="bg-white shadow-sm sticky top-0 z-10">
        <div className="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
          <div className="flex items-center space-x-3">
            <Package className="w-8 h-8 text-yellow-500" />
            <div>
              <h1 className="text-2xl font-bold text-gray-800">{userProfile.bankerName || 'Gold Loan Manager'}</h1>
              <p className="text-xs text-gray-500">Business Management System</p>
            </div>
          </div>
          
          <div className="flex items-center space-x-4">
            <div className="hidden md:flex items-center space-x-6">
              <div className="text-right">
                <p className="text-xs text-gray-500">Gold 24K</p>
                <p className="text-sm font-semibold text-yellow-600">‚Çπ{goldPrice['24k'].toFixed(0)}/g</p>
              </div>
              <div className="text-right">
                <p className="text-xs text-gray-500">Silver</p>
                <p className="text-sm font-semibold text-gray-600">‚Çπ{silverPrice.toFixed(0)}/g</p>
              </div>
            </div>
            <button
              onClick={() => setCurrentView('profile')}
              className="flex items-center space-x-2 px-4 py-2 bg-indigo-500 text-white rounded-lg hover:bg-indigo-600 transition"
            >
              <Users className="w-4 h-4" />
              <span className="hidden md:inline">Profile</span>
            </button>
            <button
              onClick={handleLogout}
              className="flex items-center space-x-2 px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition"
            >
              <LogOut className="w-4 h-4" />
              <span className="hidden md:inline">Logout</span>
            </button>
          </div>
        </div>
      </header>

      <div className="max-w-7xl mx-auto px-4 py-8">
        {/* Dashboard Header with Filters */}
        <div className="mb-8">
          <div className="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-6">
            <h2 className="text-2xl font-bold text-gray-800">Dashboard Overview</h2>
            
            <div className="flex flex-wrap gap-3">
              {/* Time Period Filter */}
              <select
                value={dashboardFilter}
                onChange={(e) => setDashboardFilter(e.target.value)}
                className="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 bg-white"
              >
                <option value="30days">Last 30 Days</option>
                <option value="2months">Last 2 Months</option>
                <option value="6months">Last 6 Months</option>
                <option value="12months">Last 12 Months</option>
              </select>

              {/* Loan Type Filter */}
              <select
                value={loanTypeFilter}
                onChange={(e) => setLoanTypeFilter(e.target.value)}
                className="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 bg-white"
              >
                <option value="all">All Loans</option>
                <option value="current">Current Loans</option>
                <option value="closed">Closed Loans</option>
              </select>
            </div>
          </div>

          {/* Dashboard Stats Cards */}
          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {/* Total Loans Given */}
            <div className="bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl p-6 text-white relative overflow-hidden">
              <button
                onClick={() => toggleVisibility('totalLoans')}
                className="absolute top-4 right-4 p-1 hover:bg-white/20 rounded transition"
              >
                {visibility.totalLoans ? <Eye className="w-4 h-4" /> : <EyeOff className="w-4 h-4" />}
              </button>
              <DollarSign className="w-8 h-8 opacity-80 mb-4" />
              <p className="text-sm opacity-90 mb-1">Total Loans Given</p>
              {visibility.totalLoans ? (
                <p className="text-3xl font-bold">‚Çπ{(dashboardData.totalLoans / 100000).toFixed(1)}L</p>
              ) : (
                <p className="text-3xl font-bold">‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢</p>
              )}
              <p className="text-xs opacity-75 mt-2">{dashboardData.currentLoans} active loans</p>
            </div>

            {/* Pending Amount */}
            <div className="bg-gradient-to-br from-orange-500 to-orange-600 rounded-xl p-6 text-white relative overflow-hidden">
              <button
                onClick={() => toggleVisibility('pendingAmount')}
                className="absolute top-4 right-4 p-1 hover:bg-white/20 rounded transition"
              >
                {visibility.pendingAmount ? <Eye className="w-4 h-4" /> : <EyeOff className="w-4 h-4" />}
              </button>
              <AlertCircle className="w-8 h-8 opacity-80 mb-4" />
              <p className="text-sm opacity-90 mb-1">Pending Amount</p>
              {visibility.pendingAmount ? (
                <p className="text-3xl font-bold">‚Çπ{(dashboardData.pendingAmount / 100000).toFixed(1)}L</p>
              ) : (
                <p className="text-3xl font-bold">‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢</p>
              )}
              <p className="text-xs opacity-75 mt-2">From {dashboardData.currentLoans} customers</p>
            </div>

            {/* Interest Collected */}
            <div className="bg-gradient-to-br from-green-500 to-green-600 rounded-xl p-6 text-white relative overflow-hidden">
              <button
                onClick={() => toggleVisibility('interestCollected')}
                className="absolute top-4 right-4 p-1 hover:bg-white/20 rounded transition"
              >
                {visibility.interestCollected ? <Eye className="w-4 h-4" /> : <EyeOff className="w-4 h-4" />}
              </button>
              <TrendingUp className="w-8 h-8 opacity-80 mb-4" />
              <p className="text-sm opacity-90 mb-1">Interest Collected</p>
              {visibility.interestCollected ? (
                <p className="text-3xl font-bold">‚Çπ{(dashboardData.interestCollected / 100000).toFixed(1)}L</p>
              ) : (
                <p className="text-3xl font-bold">‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢</p>
              )}
              <p className="text-xs opacity-75 mt-2">From {dashboardData.closedLoans} closed loans</p>
            </div>

            {/* Total Customers */}
            <div className="bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl p-6 text-white relative overflow-hidden">
              <button
                onClick={() => toggleVisibility('totalCustomers')}
                className="absolute top-4 right-4 p-1 hover:bg-white/20 rounded transition"
              >
                {visibility.totalCustomers ? <Eye className="w-4 h-4" /> : <EyeOff className="w-4 h-4" />}
              </button>
              <Users className="w-8 h-8 opacity-80 mb-4" />
              <p className="text-sm opacity-90 mb-1">Total Customers</p>
              {visibility.totalCustomers ? (
                <p className="text-3xl font-bold">{dashboardData.totalCustomers}</p>
              ) : (
                <p className="text-3xl font-bold">‚Ä¢‚Ä¢‚Ä¢</p>
              )}
              <p className="text-xs opacity-75 mt-2">Total bills generated</p>
            </div>
          </div>
        </div>

        {/* Alerts Section */}
        <div className="mb-8">
          <div className="bg-gradient-to-r from-red-50 to-orange-50 border-l-4 border-red-500 rounded-lg p-6">
            <div className="flex items-start">
              <Bell className="w-6 h-6 text-red-600 mr-3 flex-shrink-0 mt-1" />
              <div className="flex-1">
                <h4 className="font-bold text-gray-800 mb-3 text-lg">Alerts & Reminders</h4>
                <div className="grid md:grid-cols-2 gap-4">
                  <div className="bg-white rounded-lg p-4 border border-orange-200">
                    <div className="flex items-center justify-between mb-2">
                      <span className="text-orange-700 font-semibold">Approaching 11 Months</span>
                      <span className="bg-orange-100 text-orange-700 px-3 py-1 rounded-full text-sm font-bold">
