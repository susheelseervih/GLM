                      <th className="border-2 border-gray-800 px-2 py-2 text-xs font-bold">Pieces</th>
                      <th className="border-2 border-gray-800 px-2 py-2 text-xs font-bold">Value (‚Çπ)</th>
                      <th className="border-2 border-gray-800 px-2 py-2 text-xs font-bold">Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    {articles.map((article, index) => (
                      <tr key={index}>
                        <td className="border-2 border-gray-800 px-2 py-2 text-center font-bold">{index + 1}</td>
                        <td className="border-2 border-gray-800 px-2 py-2">
                          <select
                            value={article.type}
                            onChange={(e) => updateArticle(index, 'type', e.target.value)}
