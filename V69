      return {
        totalLoans: loans.length,
        totalAmount: loans.reduce((sum, loan) => sum + loan.amount, 0),
        totalInterest: loans.reduce((sum, loan) => sum + loan.interest, 0),
        closedLoans: loans.filter(l => l.status === 'Closed').length,
