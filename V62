import React, { useState, useEffect } from 'react';
import { AlertCircle, TrendingUp, Users, DollarSign, Package, LogOut, Eye, EyeOff, Search, FileText, Bell } from 'lucide-react';

const GoldLoanManagementSystem = () => {
